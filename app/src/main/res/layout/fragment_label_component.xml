<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Fragment.LabelComponent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:text="@string/building"
                android:textSize="21sp"
                android:textColor="@color/colorLabel"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/building_spinner"
                android:layout_width="300dp"
                android:layout_height="54.38dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="231dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:text="@string/floor"
                android:textSize="21sp"
                android:textColor="@color/colorLabel"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/floor_spinner"
                android:layout_width="300dp"
                android:layout_height="54.38dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="231dp"
                tools:ignore="MissingConstraints"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:text="@string/classroom"
                android:textSize="21sp"
                android:textColor="@color/colorLabel"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/classroom_spinner"
                android:layout_width="300dp"
                android:layout_height="54.38dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="231dp"
                tools:ignore="MissingConstraints"/>

        </LinearLayout>

        <Button
            android:id="@+id/label_btn"
            android:layout_width="300dp"
            android:layout_height="54.38dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:text="@string/label"
            android:textSize="21sp"
            android:textColor="@color/colorLabel"
            android:background="@drawable/label_btn"/>

    </LinearLayout>

</FrameLayout>