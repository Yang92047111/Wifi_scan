<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WifiComponent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:text="@string/disinfectionId"
            android:textSize="21sp"
            android:textColor="@color/colorLabel"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/disinfectionId_spinner"
            android:layout_width="300dp"
            android:layout_height="54.38dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="231dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/label_wifi_scan_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="walking_for_wifi.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_scan_wifi"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/colorLabel"
        android:background="@drawable/label_btn"
        android:layout_gravity="bottom"/>

</FrameLayout>