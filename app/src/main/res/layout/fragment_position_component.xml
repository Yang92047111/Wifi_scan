<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PositionComponent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="@string/car"
            android:textSize="21sp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/colorLabel"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/car_spinner"
            android:layout_width="300dp"
            android:layout_height="54.38dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="231dp"
            tools:ignore="MissingConstraints"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/locate_animate"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:lottie_autoPlay="false"
            app:lottie_fileName="location.json"
            app:lottie_loop="true"
            app:lottie_speed="1.5" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#5cc9ff"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_fontIconResource="&#xf124;"
            fancy:fb_fontIconSize="50dp"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="80dp"
            fancy:fb_textSize="35dp"
            fancy:fb_textColor="#FFFFFF" />
        <Button
            android:id="@+id/locate_btn"
            android:layout_width="300dp"
            android:layout_height="54.38dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="@string/locate"
            android:textSize="21sp"
            android:textColor="@color/colorLabel"
            android:background="@drawable/label_btn"/>

    </LinearLayout>

</FrameLayout>